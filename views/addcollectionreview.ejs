<%- include('header') %>

<h1>Add a Collection Review Below!</h1>
<div class ="container-md">
<div class ="col-8">

<form method = "POST" id ="select" action ="/addcollectionreview">
<div class="dropdown">
    <select id ="genre" name = "collectionname">
        <% col.forEach((col) =>{ %> 
        <option value= "<%=col.member_collection_id %>"><%= col.collection_title %></option>
        <% }) %>
    </select>
    <div >
        <textarea name ="review" class="form-control" placeholder="Enter your review here!"></textarea>
    </div>
    <div >
        <textarea name ="liked" class="form-control" placeholder="Let us know if you liked this review!"></textarea>
    </div>
    <input class="btn btn-primary" type="submit" value="Submit">

</form>
</div>
</div>

<%- include('footer') %>