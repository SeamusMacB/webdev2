<%- include('header') %>

  <!DOCTYPE html>
  <html>

  <head>


  </head>

  <body>
    <header>
      <div class="text-center">
        <h2>Dashboard</h2>
      </div>
    </header>
    <main>

   

        <div class="row row-eq-spacing">
            <div class="col-4 col-xl-3">
              <div class="card">
                <h2 class="card-title">Add a Vinyl Review</h2>
                Want to show the world what you think of a certain vinyl? Click right here!
                <div class="text-center">
                    <a href="/addalbumreview"><button name="add" type="submit" class="btn btn-primary" type="button"
                        value="submit">Add an Album Review</button></a>
                  </div>
              </div>
            </div>
            <div class="col-4 col-xl-3">
              <div class="card">
                <h2 class="card-title">Add Vinyl Collection</h2>
                Think you've got the perfect vinyl collection? Prove it by submitting yours below!
                <div class="text-center">
                <a href="/addcollection"><button name="add" type="submit" class="btn btn-primary" type="button"
                    value="submit">Add album collection</button></a>
                </div>
              </div>
            </div>
            <!-- Overflow occurs here on large screens (and down) -->
            <!-- Therefore, a v-spacer is added at this point -->
            <div class="v-spacer d-xl-none"></div> <!-- d-xl-none = display: none only on extra large screens (> 1200px) -->
            <div class="col-4 col-xl-3">
              <div class="card">
                <h2 class="card-title">Your Viynl Reviews</h2>
                Want to see reviews for albums you've already posted? Click the button below!
                <a href="/myalbumreviews"><button name="add" type="submit" class="btn btn-primary text-center" type="button"
                    value="submit">View my Reviews</button></a>
                </div>
              </div>
            </div>
          </div>

          <div class="row row-eq-spacing">
            <div class="col-4 col-xl-3">
              <div class="card">
                <h2 class="card-title">Update a Vinyl Review</h2>
                Want to update a previous vinyl review that you no longer agree with? click here!
                <div class="text-center">
                    <a href="/updatealbumreview"><button name="add" type="submit" class="btn btn-primary" type="button"
                        value="submit">Add an Album Review</button></a>
                  </div>
              </div>
            </div>
            <div class="col-4 col-xl-3">
              <div class="card">
                <h2 class="card-title">Delete a vinyl review</h2>
                Not happy with one of your reviews? Want it gone **forever**? Click below!
                <div class="text-center">
                <a href="/deletealbumreview"><button name="add" type="submit" class="btn btn-primary" type="button"
                    value="submit">Add album collection</button></a>
                </div>
              </div>
            </div>
            <div class="v-spacer d-xl-none"></div> 
           
              </div>
            </div>
          </div>

          <div class="row row-eq-spacing">
            <div class="col-4 col-xl-3">
              <div class="card">
                <h2 class="card-title">My Album Collections</h2>
                Want to show the world what you think of a particular album? Click right here!
                <div class="text-center">
                    <a href="/mycollections"><button name="add" type="submit" class="btn btn-primary" type="button"
                        value="submit">View my collections</button></a>
                  </div>
              </div>
            </div>
            <div class="col-4 col-xl-3">
              <div class="card">
                <h2 class="card-title">Delete a collection</h2>
                Think you've got the perfect album collection? Prove it by submitting yours below!
                <div class="text-center">
                <a href="/deletecollection"><button name="add" type="submit" class="btn btn-primary" type="button"
                    value="submit">Add album collection</button></a>
                </div>
              </div>
            </div>
           <div class="v-spacer d-xl-none"></div> 
            <div class="col-4 col-xl-3">
              
              </div>
            </div>
          </div>

    </main>
  </body>

  </html>


